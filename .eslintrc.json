{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "plugins": [
        "security"
    ],
    "extends": [
        "google",
        "plugin:security/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "comma-spacing": [
            "error",
            {
                "before": false,
                "after": true
            }
        ],
        "max-len": [
            "error",
            {
                "ignoreComments": true
            }
        ]
    }
}